<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (modo fijo, sin modo oscuro). -->
    <style name="Base.Theme.AppAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Desactivar forzado de modo oscuro -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Colores fijos -->
        <item name="colorPrimary">#3B82F6</item> <!-- Azul -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#16A34A</item> <!-- Verde -->
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:windowBackground">#F2F4F8</item> <!-- Fondo claro -->
    </style>

    <style name="Theme.AppAndroid" parent="Base.Theme.AppAndroid" />
</resources>
