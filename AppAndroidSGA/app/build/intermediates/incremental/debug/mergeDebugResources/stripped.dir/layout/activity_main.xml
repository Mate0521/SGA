<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F2F4F8"
    android:padding="24dp">

    <TextView
        android:text="Sistema de Gestión Académica"
        android:textSize="24sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3B82F6"
        android:text="Ver Asignaturas"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnProfesores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#16A34A"
        android:text="Ver Profesores"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F59E0B"
        android:text="Login"
        android:textColor="#FFFFFF" />

</LinearLayout>